#:kivy 2.0.0

<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: [0.95, 0.95, 0.95, 1]  # Light gray background
        
        # Top spacer
        Widget:
            size_hint_y: 0.2
        
        # Main login container
        MDCard:
            size_hint: None, None
            size: "400dp", "500dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 0
            radius: [15, 15, 15, 15]
            md_bg_color: [1, 1, 1, 1]  # White background
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: "32dp"
                spacing: "24dp"
                
                # Logo/Title section
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "120dp"
                    spacing: "8dp"
                    
                    MDLabel:
                        text: "[size=32][font=Brico]RETAIL STORE[/font][/size]"
                        markup: True
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: [0.639, 0.114, 0.114, 1]  # Brand red
                        bold: True
                    
                    MDLabel:
                        text: "[size=24][font=Brico]MANAGER[/font][/size]"
                        markup: True
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: [0.639, 0.114, 0.114, 1]  # Brand red
                        bold: True
                    
                    MDLabel:
                        text: "Please sign in to continue"
                        halign: "center"
                        theme_text_color: "Secondary"
                        font_style: "Body1"
                
                # Login form section
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "16dp"
                    
                    # Username field
                    MDTextField:
                        id: username_field
                        hint_text: "Username"
                        icon_left: "account"
                        size_hint_y: None
                        height: "56dp"
                        mode: "rectangle"
                        line_color_focus: [0.639, 0.114, 0.114, 1]
                        text_color_focus: [0.639, 0.114, 0.114, 1]
                        on_text_validate: root.attempt_login()
                    
                    # Password field
                    MDTextField:
                        id: password_field
                        hint_text: "Password"
                        icon_left: "lock"
                        password: True
                        size_hint_y: None
                        height: "56dp"
                        mode: "rectangle"
                        line_color_focus: [0.639, 0.114, 0.114, 1]
                        text_color_focus: [0.639, 0.114, 0.114, 1]
                        on_text_validate: root.attempt_login()
                
                # Login button section
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "12dp"
                    size_hint_y: None
                    height: "80dp"
                    
                    MDFlatButton:
                        id: login_button
                        text: "[size=16][font=Brico]LOGIN[/font][/size]"
                        markup: True
                        size_hint_y: None
                        height: "48dp"
                        md_bg_color: [0.639, 0.114, 0.114, 1]  # Brand red
                        text_color: [1, 1, 1, 1]  # White text
                        elevation: 0
                        on_release: root.attempt_login()
                    
                    MDFlatButton:
                        text: "Forgot Password?"
                        theme_text_color: "Custom"
                        text_color: [0.639, 0.114, 0.114, 1]
                        size_hint_y: None
                        height: "32dp"
                        on_release: root.show_forgot_password_dialog()
                
                # Footer section
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "60dp"
                    spacing: "4dp"
                    
        
        # Bottom spacer
        Widget:
            size_hint_y: 0.2
        
        # Version info
        MDLabel:
            text: "Retail Store Manager v1.0"
            halign: "center"
            theme_text_color: "Hint"
            font_style: "Caption"
            size_hint_y: None
            height: "20dp"